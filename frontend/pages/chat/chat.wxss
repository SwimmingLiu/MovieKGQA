.voiceBox{
    display: flex; 
    justify-content: center;
    /* border:1px solid red; */
    box-sizing: border-box;
    width:100%;
    position: fixed;
    bottom: 100px;
    z-index: 99;
}
.loading{
    display: none;
    vertical-align: middle;
    margin-bottom: 50rpx;
}
.loading{
    display: inline-block;
}
.loading > view{
    display: inline-block;
    vertical-align: middle;
    width: 12rpx;
    background-color: #006EFF;
    margin-right: 16rpx;
    border-radius:50rpx;
}
.loading > view:last-child{
    margin-right: 0;
}
.line1{
    animation: lines 0.5s infinite ease-in-out alternate;
}
.line2{
    animation: lines 0.3s infinite ease-in-out alternate;
}
.line3{
    animation: lines 0.4s  infinite ease-in-out alternate;
}
.line4{
    animation: lines 0.2s  infinite ease-in-out alternate;
}
.line5{
    animation: lines 0.6s infinite ease-in-out alternate;
}

@keyframes lines {
    from,10% {
        height: 4rpx;
    }
    to,90%{
        height: 60rpx;
    }
}
@-webkit-keyframes lines {
    from,10% {
        height: 4rpx;
    }
    to,90%{
        height: 60rpx;
    }
}