.leftMsg {
  box-sizing: border-box;
  font-size: 30rpx;
  color: black;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #8EC5FC;
  background-image: linear-gradient(90deg, #8EC5FC 12%, #E0C3FC 100%);
  /* 在右侧添加阴影效果 */ 
  background-clip: padding-box; /* 设置背景仅填充内容框 */
  margin-left: 0.5vw;
  border-radius: 20px;
  z-index: 10;
}
.leftMsg_img{
    margin-bottom: 10rpx;
    box-sizing: border-box;
    width: 100%;
    height: 0;
    padding-bottom: 100%;
    border-radius: 5%;
    background-size: cover;
}
.rightMsg {
  box-sizing: border-box;
  font-size: 30rpx;
  color: black;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #8EC5FC;
  background-image: linear-gradient(270deg, #8EC5FC 12%, #E0C3FC 100%);
  /* 在右侧添加阴影效果 */ 
  border-radius: 10rpx;
  z-index: 10;
}
