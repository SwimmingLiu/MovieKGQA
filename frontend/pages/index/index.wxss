/**index.wxss**/

.container {
    display: flex;
    flex-direction: column;
    padding-top: 0;
    height: 100vh;
    background-color: #8EC5FC;
    background-image: linear-gradient(180deg, #8EC5FC 12%, #E0C3FC 100%);
    /* 在右侧添加阴影效果 */
}
.mainBox {
    margin-top: 30rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 80vh;
    width: 100%;
}
.title{
    font-size: 120rpx;
    text-align: center;
    font-family: 'Shojumaru';
    font-weight:bold;
    color: black;        
}
.StartBox {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    width: 100vw;
    margin-bottom: 20rpx;
}
.botImg{
    margin:30rpx;
    height:620rpx;
    width: 580rpx;
}
.loginBtn {
    width: 300rpx;
    border-radius: 28px;
    /* 圆角半径，可以根据需要调整 */
    background-color: black;
    /* 设置背景颜色为黑色 */
    color: white;
    /* 设置文字颜色为白色，以便于对比 */
    padding: 10px 20px;
    /* 设置内边距，调整按钮大小 */
    border: none;
    /* 可以去掉边框 */
    outline: none;
    /* 去掉按钮点击时的外边框 */
    font-size: 35px;
    font-weight: bold;
    font-family: 'Shojumaru';
}